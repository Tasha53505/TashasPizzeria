    }

    }
</style>


<script>
    function handleCheckboxChange(checkboxId, elementClass) {
        const checkbox = document.getElementById(checkboxId);
        const element = document.querySelector(`.${elementClass}`);

        if (checkbox.checked) {
            element.classList.add('active');
        } else {
            element.classList.remove('active');
        }
    }


    function handlePepperoniCheckboxChange() {
        const checkbox = document.getElementById('PepperoniCheckbox');
        const pepperoniElements = document.querySelectorAll('.PizzaPepperoni2, .PizzaPepperoni3, .PizzaPepperoni4, .PizzaPepperoni5, .PizzaPepperoni6');

        pepperoniElements.forEach(element => {
            if (checkbox.checked) {
                element.classList.add('active');
            } else {
                element.classList.remove('active');
            }
        });
    }
</script>



